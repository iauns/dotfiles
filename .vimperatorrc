" vim: set ft=vimperator:

"--------------------------------------------------------------------------------
" Mappings
"--------------------------------------------------------------------------------
" Make j and k scroll faster
noremap j 5j
noremap k 5k

" swap d/D
noremap d D
noremap D d

" back/forward (ignoring left / right)
noremap h <C-o>
noremap l <C-i>

noremap s :open google 
noremap S :tabopen google 

"--------------------------------------------------------------------------------
" Settings
"--------------------------------------------------------------------------------
" Set editor to mvim
"set editor='/usr/local/bin/mvim -f <line> +"sil! call cursor(0, <column>)" <file>'
set editor='/usr/local/bin/mvim -f'

" Turn on tab numbering
set tabnumbers=true

" Turn off the bells with a vengance!
set noerrorbells
set novisualbell

" Custom hints - Make them much more visible.
" Didn't need this when I switched to vimperator.
