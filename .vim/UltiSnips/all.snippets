snippet it "Insert an inline tag"
<${1:math}>$0</${1/(\w+).*/$1/}>
endsnippet

snippet itma "Insert a math tag with alignment"
<math>
\begin{align}
$0 =& \\
\end{align}
</math>
endsnippet

snippet ih1 "Insert a level1 wiki header"
= $0 =
endsnippet

snippet ih2 "Insert a level2 wiki header"
== $0 ==
endsnippet

snippet ih3 "Insert a level3 wiki header"
=== $0 ===
endsnippet

snippet ih4 "Insert a level4 wiki header"
==== $0 ====
endsnippet
